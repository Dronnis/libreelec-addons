<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
  id="repository.linuxserver.docker"
  name="Linuxserver Docker Add-ons"
  version="1.0.3"
  provider-name="linuxserver.io">
  <requires>
    <import addon="xbmc.addon"
            version="16.0.0"/>
  </requires>
  <extension point="xbmc.addon.repository"
             name="Linuxserver Docker Add-on Repository">
    <info compressed="true">https://raw.githubusercontent.com/linuxserver/libreelec-addons/master/addons.xml</info>
    <checksum>https://raw.githubusercontent.com/linuxserver/libreelec-addons/master/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.githubusercontent.com/linuxserver/libreelec-addons/master/download</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Install add-ons from linuxserver docker repository</summary>
    <description>
Download and install docker container add-ons from the linuxserver repository.

Please visit www.linuxserver.io for more information.
    </description>
    <disclaimer> </disclaimer>
    <platform>all</platform>
  </extension>
</addon>
